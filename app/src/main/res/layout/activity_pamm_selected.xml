<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pamm_selected"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btn_back_pamm_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:layout_marginRight="16dp"
                app:srcCompat="@drawable/leftarrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:id="@+id/toolbar_title_pamm_selected" />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="2dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PAMM"
                        android:textColor="#000"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/tx_name_pamm_selected"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Account"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:id="@+id/tx_account_pamm_selected"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/star"
                            android:id="@+id/img_star1_pamm_s"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/star"
                            android:id="@+id/img_star2_pamm_s"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/star"
                            android:id="@+id/img_star3_pamm_s"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/star"
                            android:id="@+id/img_star4_pamm_s"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/star"
                            android:id="@+id/img_star5_pamm_s"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20 %"
                        android:gravity="center"
                        android:id="@+id/tx_pamm_ms"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="50"
                        android:indeterminate="false"
                        android:id="@+id/pgr_pamm_ms"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PAMM Managers Share"
                        android:textSize="@dimen/font_desc_pamm"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="80 %"
                        android:gravity="center"
                        android:id="@+id/tx_pamm_is"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="50"
                        android:indeterminate="false"
                        android:id="@+id/pgr_pamm_is"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Investors Share"
                        android:textSize="@dimen/font_desc_pamm"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="25 %"
                        android:gravity="center"
                        android:id="@+id/tx_pamm_ps"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="50"
                        android:indeterminate="false"
                        android:id="@+id/pgr_pamm_ps"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PAMM Partners Share"
                        android:textSize="@dimen/font_desc_pamm"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="$ 1000"
                        android:gravity="center"
                        android:id="@+id/tx_pamm_tmi"/>
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="1"
                        android:indeterminate="false"
                        android:id="@+id/pgr_pamm_tmi"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The Minimum Investment"
                        android:textSize="@dimen/font_desc_pamm"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text="Account Balance"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/tx_ab_pamm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text=": $ 123.456.78"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Equity"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/tx_equity_pamm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text=": $ 123.456.78"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text="Profitability"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/tx_profit_pamm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text=": $ 123.456.78"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text="Today Profit"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/tx_tprofit_pamm"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text=": $ 23.456.78"
                        android:textColor="#000" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:text="Total Drawdown"
                        android:textColor="#000" />
                    <TextView
                        android:id="@+id/tx_drawdown_pamm"
                        android:layout_width="0dp"
                        android:textSize="@dimen/font_desc2_pamm"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=": "
                        android:textColor="#000" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:weightSum="3">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:text="Invest"
                    android:textSize="@dimen/font_desc2_pamm"
                    android:background="@drawable/shape_chat_tt"
                    android:textColor="#fff"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.4"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3"
                    android:textSize="@dimen/font_desc2_pamm"
                    android:text="Follow"
                    android:background="@drawable/shape_biru"
                    android:textColor="#fff"/>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_graph_pamm"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graph_pamm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_web_pamm"
                android:layout_marginTop="8dp">
                <WebView
                    android:id="@+id/web_table_pamm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>