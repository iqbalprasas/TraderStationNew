<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#303030"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#303030"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:padding="1dp">
                <ImageView
                    android:layout_width="@dimen/img_pp_comp"
                    android:layout_height="@dimen/img_pp_comp"
                    android:id="@+id/img_profile_tp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/ic_launcher_round" />
                <ImageView
                    android:id="@+id/img_flag_tp"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:src="@drawable/united_kingdom"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:padding="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="8">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="@dimen/heighy_text_bold_tp"
                        android:textColor="#fff"
                        android:layout_weight="7"
                        android:id="@+id/tx_username_tp"
                        android:textStyle="bold"/>
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#303030"
                        android:layout_weight="1"
                        android:id="@+id/btn_expand"
                        android:src="@drawable/ic_down"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="50"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/color_progress"
                        android:id="@+id/pgr_tp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Return"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textColor="#fff" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Drawdown"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textColor="#fff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10%"
                        android:textSize="@dimen/heighy_text_bold_tp"
                        android:background="@drawable/shape_chat_tt"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:layout_marginRight="4dp"
                        android:textColor="#fff"
                        android:id="@+id/tx_return_tp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10%"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:background="@drawable/shape_red"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/tx_drawdown_tp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#303030"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:id="@+id/expand_layout">
            <LinearLayout
                android:layout_width="@dimen/widht_side_button_tp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:padding="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="123 Follower"
                    android:textColor="#fff"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_reverse_tp"
                    android:background="@drawable/shape_biru"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tx_follwer_tp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123 Copier"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="@dimen/font_reverse_tp"
                    android:background="@drawable/shape_chat_tt"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tx_copier_tp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="123 Reverser"
                    android:textColor="#fff"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_reverse_tp"
                    android:background="@drawable/shape_yellow"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/tx_reverser_tp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_top_line_tp"
                    android:layout_marginBottom="4dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Follow"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:padding="4dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_reverse_tp"
                    android:background="@drawable/shape_biru"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tx_follow_tp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copy"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:padding="4dp"
                    android:textSize="@dimen/font_reverse_tp"
                    android:background="@drawable/shape_chat_tt"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/tx_copy_tp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reverse"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:padding="4dp"
                    android:gravity="center"
                    android:textSize="@dimen/font_reverse_tp"
                    android:background="@drawable/shape_yellow"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/tx_reverse_tp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:padding="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:layout_weight="3"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#fff" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="50.000.00"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:textColor="#fff"
                        android:id="@+id/tx_balance_tp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Broker Information"
                        android:textColor="#fff"
                        android:textSize="@dimen/font_desc_tp"
                        android:id="@+id/tx_broker_info_tp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="4dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/graph_tp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>