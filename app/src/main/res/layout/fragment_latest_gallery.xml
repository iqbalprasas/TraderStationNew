<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        android:background="@drawable/shape_desc_gallery">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="0dp"
            android:weightSum="6">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginRight="4dp"
                android:src="@drawable/profile"
                android:id="@+id/img_profile_gallery"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="User"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/tx_name_gallery"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="top|right"
                android:text="20 minutes ago"
                android:textSize="12sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/tx_time_gallery"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum Dolor Sit Amet"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/tx_title_gallery"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras maximus leo eget laoreet tempus. Suspendisse quis consequat purus, a aliquet dolor."
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:textColor="#000"
                android:id="@+id/tx_desc_gallery"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/seminar_web"
                android:layout_marginBottom="8dp"
                android:id="@+id/img_desc_gallery"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="View Gallery"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12sp"
                android:id="@+id/btn_view_gallery"
                android:background="@drawable/shape_yellow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>