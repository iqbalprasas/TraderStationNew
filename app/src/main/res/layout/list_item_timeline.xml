<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/id_id_timeline"
            android:textSize="0sp"
            android:text="" />
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/img_profile_timeline"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_profile_timeline"
            android:text="Profile Name"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time_profile_timeline"
            android:text="1 minute"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/img_post_timeline"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/desc_profile_timeline"
            android:layout_gravity="center"
            android:text="Lorem ipsum dolor sit amet"
            android:textColor="#000000" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/like_profile_timeline"
            android:text="like"
            android:textSize="8sp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/dislike_profile_timeline"
                android:text="dislike"
                android:textSize="8sp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/comment_profile_timeline"
            android:text="Comment"
            android:textSize="8sp"
            android:layout_weight="1"
            android:textColor="#FFFFFF"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/share_profile_timeline"
                android:text="Share"
                android:textSize="8sp"
                android:layout_weight="1"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_like_timeline"
                android:textSize="0sp"
                android:text="" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_dislike_timeline"
                android:textSize="0sp"
                android:text="" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_comment_timeline"
                android:textSize="0sp"
                android:text="" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/id_share_timeline"
                android:textSize="0sp"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>