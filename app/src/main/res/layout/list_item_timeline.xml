<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/img_profile_timeline"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/viewimage"
                    app:siBorderColor="#79C739"
                    app:siBorderWidth="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_profile_timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Name"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/time_event" />

                    <TextView
                        android:id="@+id/time_profile_timeline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 minute"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tx_status_timeline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:textSize="@dimen/font_status_timeline"
                android:background="@drawable/shape_status_timeline"
                android:paddingLeft="14dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                android:text="News"
                android:textColor="#fff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_post_timeline"
                android:layout_width="@dimen/width_img_timeline"
                android:layout_height="@dimen/height_img_timeline"
                android:layout_gravity="left"
                android:layout_marginRight="4dp"
                app:srcCompat="@drawable/seminar_web" />

            <TextView
                android:id="@+id/desc_profile_timeline1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textSize="@dimen/font_desc_timeline"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent ut bibendum sapien. Pellentesque vestibulum bibendum nibh, id commodo risus consectetur quis. Lorem ipsum dolor sit."
                android:textColor="#000000" />
        </LinearLayout>

        <TextView
            android:id="@+id/desc_profile_timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="4dp"
            android:paddingRight="8dp"
            android:textSize="@dimen/font_desc_timeline"
            android:text="Sed nisi mi, laoreet a vestibulum quis, blandit ac tortor."
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:paddingRight="8dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#999999" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="366dp"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/like_profile_timeline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="4dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/sum_like_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10"
                android:textColor="#000" />

            <ImageButton
                android:id="@+id/dislike_profile_timeline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="4dp"
                android:src="@drawable/unlike" />

            <TextView
                android:id="@+id/sum_unlike_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10"
                android:textColor="#000" />

            <ImageButton
                android:id="@+id/comment_profile_timeline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:padding="4dp"
                android:src="@drawable/comment" />

            <TextView
                android:id="@+id/sum_comment_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10"
                android:textColor="#000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right">

                <ImageButton
                    android:id="@+id/share_profile_timeline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="0dp"
                    android:src="@drawable/share" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>