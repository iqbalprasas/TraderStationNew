<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#303030"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#303030"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="2dp"
                android:padding="1dp">
                <ImageView
                    android:layout_width="@dimen/img_pp_ea"
                    android:layout_height="@dimen/img_pp_ea"
                    android:id="@+id/img_profile_ea"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/ic_launcher_round" />

                <ImageView
                    android:id="@+id/img_flag_ea"
                    android:layout_width="@dimen/img_start_ea"
                    android:layout_height="@dimen/img_start_ea"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_star" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:padding="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="8">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="@dimen/heighy_text_bold_tp"
                        android:textColor="#fff"
                        android:layout_weight="7"
                        android:id="@+id/tx_username_ea"
                        android:textStyle="bold"/>
                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="#303030"
                        android:layout_weight="1"
                        android:id="@+id/btn_expand_ea"
                        android:src="@drawable/ic_down"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="by : lorem ipsum"
                        android:layout_weight="1"
                        android:id="@+id/tx_by_ea"
                        android:textColor="#FFF"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="vertical">
                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="50"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/color_progress"
                        android:id="@+id/pgr_ea"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Return"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textColor="#fff" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Drawdown"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textColor="#fff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10%"
                        android:textSize="@dimen/heighy_text_bold_tp"
                        android:background="@drawable/shape_chat_tt"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:layout_marginRight="4dp"
                        android:textColor="#fff"
                        android:id="@+id/tx_return_ea"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="10%"
                        android:textSize="@dimen/heighy_text_bold_tp"                        android:background="@drawable/shape_red"
                        android:gravity="center"
                        android:layout_weight="3"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/tx_drawdown_ea"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#303030"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/expand_layout_ea">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginTop="1dp"
                android:padding="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Gain"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text=": 89.2 %"
                        android:id="@+id/tx_gain_ea"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Balance"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text=": $1234567"
                        android:id="@+id/tx_balance_ea"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Profit"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text=": $1234567"
                        android:id="@+id/tx_profit_ea"
                        android:textColor="#fff"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:text="Equity"
                        android:textColor="#fff"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text=": $1234567"
                        android:id="@+id/tx_equity_ea"
                        android:textColor="#fff"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Broker Information"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_desc_tp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="lorem ipsum"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_desc_tp"
                    android:id="@+id/tx_broker_info_ea"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:padding="1dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:gravity="center"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Ask Owner"
                        android:textColor="#fff"
                        android:padding="4dp"
                        android:gravity="center"
                        android:layout_weight="1.3"
                        android:textSize="@dimen/font_reverse_tp"
                        android:background="@drawable/shape_yellow"
                        android:id="@+id/tx_reverser_tp"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Order Now"
                        android:gravity="center"
                        android:layout_weight="1.3"
                        android:textColor="#fff"
                        android:padding="4dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_reverse_tp"
                        android:background="@drawable/shape_biru"
                        android:id="@+id/tx_follow_tp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/graph_ea"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>