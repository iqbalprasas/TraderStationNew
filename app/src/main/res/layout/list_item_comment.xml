<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4c4c4c"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:background="#4c4c4c"
        android:paddingRight="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <com.github.siyamed.shapeimageview.CircularImageView
                    android:id="@+id/img_profile_comment"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/viewimage"
                    app:siBorderColor="#79C739"
                    app:siBorderWidth="0dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2.9"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_profile_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Name"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time_profile_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum"
                    android:layout_marginBottom="8dp"
                    android:textColor="#fff"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="366dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:weightSum="10">

                    <ImageButton
                        android:id="@+id/like_profile_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#4c4c4c"
                        android:padding="4dp"
                        android:src="@drawable/like" />

                    <TextView
                        android:id="@+id/sum_like_comment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="10"
                        android:textColor="#fff" />

                    <ImageButton
                        android:id="@+id/dislike_profile_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#4c4c4c"
                        android:padding="4dp"
                        android:src="@drawable/unlike" />

                    <TextView
                        android:id="@+id/sum_unlike_comment"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="10"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_height="1dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>