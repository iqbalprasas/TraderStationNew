<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="@dimen/activity_horizontal_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardview_dark_background"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/forextime_logo"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:layout_weight="1"
                        android:id="@+id/img_broker_broker"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:textStyle="bold"
                        android:text="Learn to Trade"
                        android:textColor="#000"
                        android:id="@+id/tx_desc_broker"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:gravity="center">
                        <ProgressBar
                            android:layout_width="match_parent"
                            android:layout_height="10dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progress="80"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/color_progress"
                            android:id="@+id/pgr_broker"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="3">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="XM"
                        android:paddingRight="6dp"
                        android:paddingLeft="6dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:id="@+id/tx_name_broker"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:text="Website"
                            android:background="@drawable/button_join_rb"
                            android:textColor="#fff"
                            android:id="@+id/btn_web_broker"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:text="Review"
                            android:background="@drawable/button_join_rb"
                            android:textColor="#fff"
                            android:id="@+id/btn_review_broker"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>